<Window x:Class="Trojan.Tran.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Trojan.Tran.Wpf"
        mc:Ignorable="d"
        Title="Trojan.Tran" Height="400" Width="800" WindowStartupLocation="CenterScreen" ShowInTaskbar="True" ResizeMode="NoResize" >
    <Grid>
        <DockPanel >
            <StackPanel DockPanel.Dock="Left"  Width="60">
                <Button Content="启动" Name="btnStart" Click="btnStart_Click"/>
                <Button Content="停止" Name="btnEnd" Click="btnEnd_Click"/>
            </StackPanel>
            <StatusBar DockPanel.Dock="Bottom" Height="30">
                <StatusBarItem>
                    <TextBlock Name="lblCursorPosition" />
                </StatusBarItem>
            </StatusBar>
            <ListBox DockPanel.Dock="Bottom"  Height="370" Name="lbInfos" >
            </ListBox>
        </DockPanel>
    </Grid>
</Window>
